   vld_thresh      = 1.0;
   shape           = SQUARE;
   gaussian_dx     = 3;
   gaussian_radius = 3;
   type = [
      {
         method = NEAREST;
         width  = [1];
      }
   ];
}

////////////////////////////////////////////////////////////////////////////////

